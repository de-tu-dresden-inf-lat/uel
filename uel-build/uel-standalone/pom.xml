	<build>

		<finalName>uel</finalName>

		<plugins>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.5.4</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.groupId};singleton:=true</Bundle-SymbolicName>
						<Bundle-Name>UEL</Bundle-Name>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Bundle-Category>protege</Bundle-Category>
						<Bundle-Description>UEL standalone</Bundle-Description>
						<Bundle-Vendor>Chair of Automata Theory - TU Dresden</Bundle-Vendor>
						<Bundle-DocURL>http://lat.inf.tu-dresden.de</Bundle-DocURL>
						<Bundle-ClassPath>${bundle.classpath}</Bundle-ClassPath>
						<Import-Package>${import.package}</Import-Package>
						<Main-Class>${mainClass}</Main-Class>
						<Include-Resource>
							{maven-resources}, {maven-dependencies},
							@uel-type-${project.version}.jar,
							@uel-rule-${project.version}.jar,
							@uel-sat-${project.version}.jar,
							@uel-asp-${project.version}.jar,
							@uel-core-${project.version}.jar,
							@uel-ui-${project.version}.jar,
							@org.ow2.sat4j.core-2.3.5.jar,
							@org.ow2.sat4j.pb-2.3.5.jar,
							@org.ow2.sat4j.maxsat-2.3.5.jar,
							@commons-cli-1.1.jar,
							@jackson-core-asl-1.9.13.jar,
							@jackson-mapper-asl-1.9.13.jar,
							@jlfgr-1.0.jar,
							@owlapi-distribution-3.5.1.jar,
							@slf4j-api-1.7.7.jar,
							@guava-18.0.jar,
							@guice-4.0-beta.jar,
							@guice-multibindings-4.0-beta.jar,
							@guice-assistedinject-4.0-beta.jar,
							@javax.inject-1.jar,
							@aopalliance-1.0.jar,
							@commons-io-2.4.jar,
							@sesame-model-2.7.12.jar,
							@sesame-rio-api-2.7.12.jar,
							@sesame-rio-binary-2.7.12.jar,
							@sesame-rio-datatypes-2.7.12.jar,
							@sesame-rio-languages-2.7.12.jar,
							@sesame-rio-n3-2.7.12.jar,
							@sesame-rio-nquads-2.7.12.jar,
							@sesame-rio-ntriples-2.7.12.jar,
							@sesame-rio-rdfjson-2.7.12.jar,
							@sesame-rio-rdfxml-2.7.12.jar,
							@sesame-rio-trig-2.7.12.jar,
							@sesame-rio-trix-2.7.12.jar,
							@sesame-rio-turtle-2.7.12.jar,
							@sesame-util-2.7.12.jar,
							@trove4j-3.0.3.jar
						</Include-Resource>
					</instructions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<configuration>
					<executable>java</executable>
					<mainClass>${mainClass}</mainClass>
				</configuration>
			</plugin>

		</plugins>
