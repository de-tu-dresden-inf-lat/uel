<?xml version="1.0" encoding="UTF-8" ?>
<project name="uel.type" default="dist" basedir=".">

	<!--
 *
 * @author Julian Mendez
 *
-->

	<!-- 
	For more information about this file, see http://ant.apache.org 
	-->

	<property name="project.groupId" value="uel" />
	<property name="project.artifactId" value="uel.type" />

	<!-- Imports version properties. -->
	<property file="version.properties" />

	<!-- 

	The following version properties should be defined at this point : 
	  * project.version : has the version number of the form major.minor.patch 
	  * build.number : has the build number
	  * dependencies : has a space-separated list of the jars required to compile the project and run the test cases
	  * javadocsrc : has a colon-separated list of source directories for the javadoc

	-->

	<property name="parent.directory" value="../uel.build" />

	<!-- Compiles this module. -->
	<target name="dist">
		<subant genericantfile="${parent.directory}/genericantfile.xml" buildpath=".">
			<property name="project.groupId" value="${project.groupId}" />
			<property name="project.artifactId" value="${project.artifactId}" />
			<property name="project.version" value="${project.version}" />
			<property name="build.number" value="${build.number}" />
			<property name="dependencies" value="${dependencies}" />
		</subant>
	</target>

</project>

