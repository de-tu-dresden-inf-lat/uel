<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		http://maven.apache.org/xsd/maven-4.0.0.xsd">


	<!--
 *
 * @author Julian Mendez
 *
-->

	<modelVersion>4.0.0</modelVersion>

	<groupId>uel</groupId>
	<artifactId>bundle</artifactId>
	<version>1.1.0</version>
	<packaging>bundle</packaging>

	<name>uel bundle</name>

	<build>

		<finalName>de.tudresden.inf.lat.uel</finalName>

		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.4</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>de.tudresden.inf.lat.uel;singleton:=true</Bundle-SymbolicName>
						<Bundle-Name>UEL Plug-in</Bundle-Name>
						<Bundle-Version>${project.version}.333</Bundle-Version>
						<Bundle-Activator>org.protege.editor.core.plugin.DefaultPluginActivator</Bundle-Activator>
						<Bundle-Category>protege</Bundle-Category>
						<Bundle-Description>UEL Protege plug-in</Bundle-Description>
						<Bundle-Vendor>Chair of Automata Theory - TU Dresden</Bundle-Vendor>
						<Bundle-DocURL>http://lat.inf.tu-dresden.de</Bundle-DocURL>
						<Bundle-ClassPath>., lib/uel/uel.type/1.1.0/uel.type-1.1.0.jar, lib/uel/uel.rule/1.1.0/uel.rule-1.1.0.jar, lib/uel/uel.sat/1.1.0/uel.sat-1.1.0.jar, lib/org/sat4j/core/2.3.0/core-2.3.0.jar, lib/com/sun/java/jlfgr/1.0/jlfgr-1.0.jar</Bundle-ClassPath>
						<Import-Package>javax.accessibility, javax.swing, javax.swing.border, org.osgi.framework, org.protege.editor.core.ui.workspace, *</Import-Package>
						<Include-Resource>
							{maven-resources}, {maven-dependencies},
							@../uel.plugin/target/uel.plugin-1.1.0.jar,
							lib/uel/uel.type/1.1.0/uel.type-1.1.0.jar=../uel.type/target/uel.type-1.1.0.jar,
							lib/uel/uel.rule/1.1.0/uel.rule-1.1.0.jar=../uel.rule/target/uel.rule-1.1.0.jar,
							lib/uel/uel.sat/1.1.0/uel.sat-1.1.0.jar=../uel.sat/target/uel.sat-1.1.0.jar,
							lib/org/sat4j/core/2.3.0/core-2.3.0.jar=../uel.jars/lib/org/sat4j/core/2.3.0/core-2.3.0.jar,
							lib/com/sun/java/jlfgr/1.0/jlfgr-1.0.jar=../uel.jars/lib/com/sun/java/jlfgr/1.0/jlfgr-1.0.jar
						</Include-Resource>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>

